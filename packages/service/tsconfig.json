{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "build/main",
    "rootDir": "src",
    "strict": true /* Enable all strict type-checking options. */,
    "baseUrl": "./",
    "strictNullChecks": true,
    "paths": {
      "debug/src/node": ["../../node_modules/@types/debug"]
    },
    "types": ["w3c-web-usb"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/", "**/*.spec.ts", "lib/"]
}
