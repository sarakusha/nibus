{
  "name": "@nibus/cli",
  "version": "4.1.0",
  "description": "Nata-Info NiBUS",
  "keywords": [
    "nata-info",
    "nibus",
    "sarakusha"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "service": "cross-env NODE_ENV=production DEBUG=nibus:*,-nibus:decoder pm2 --name=nibus.service start lib/service/daemon.js",
    "build": "tsup",
    "compile": "cross-env NODE_ENV=development tsc",
    "lint": "eslint -c ../../.eslintrc.cjs --ext .js,.ts,.tsx src/",
    "lint:fix": "eslint -c ../../.eslintrc.cjs --ext .js,.ts,.tsx --fix src/"
  },
  "bin": {
    "nibus": "build/index.js"
  },
  "author": "Andrei Sarakeev <avs@nata-info.ru>",
  "license": "MIT",
  "files": [
    "build",
    "!**/*.tsbuildinfo",
    "!**/*.spec.*",
    "CHANGELOG.md",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sarakusha/nibus.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/sarakusha/nibus/issues"
  },
  "devDependencies": {
    "@types/debug": "^4.1.0",
    "@types/lodash": "^4.17.16",
    "@types/progress": "^2.0.3",
    "@types/tail": "^2.0.0",
    "@types/yargs": "^17.0.0"
  },
  "dependencies": {
    "@nibus/core": "^4",
    "@nibus/mibs": "^4",
    "@nibus/service": "^4",
    "chalk": "4",
    "cli-table3": "^0.6.0",
    "debug": "4",
    "fp-ts": "^2.4.1",
    "io-ts": "^2.0.5",
    "lodash": "^4.17.21",
    "onetime": "5",
    "pm2": "^5.0.0",
    "progress": "^2.0.3",
    "supports-color": "8",
    "table-layout": "^1.0.0",
    "tail": "^2.0.2",
    "yargs": "^17.0.1"
  },
  "peerDependencies": {
    "debug": "^4.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/*.+[tj]sx?",
      "**/src/**/*.spec.+[tj]sx?"
    ]
  },
  "pkg": {
    "scripts": "lib/**/*.js",
    "assets": "assets/**"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "876cd1a510a30b9b3a4b59c012dd707db5e695b8"
}
